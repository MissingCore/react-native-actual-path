{
  "name": "@missingcore/react-native-actual-path",
  "version": "0.0.0",
  "description": "A utility package that attempts to get the actual path from content URIs.",
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "react-native": "./src/index.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/module/index.js"
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/.*"
  ],
  "scripts": {
    "example:expo": "pnpm --filter expo-demo run",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MissingCore/react-native-actual-path.git"
  },
  "author": "cyanChill",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MissingCore/react-native-actual-path/issues"
  },
  "homepage": "https://github.com/MissingCore/react-native-actual-path#readme",
  "devDependencies": {
    "@react-native/eslint-config": "^0.79.2",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.12",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "react": "19.0.0",
    "react-native": "^0.79.2",
    "react-native-builder-bob": "^0.40.11",
    "release-it": "^19.0.2",
    "release-it-pnpm": "^4.6.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "verbose": true
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "build: release ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addUnreleased": true,
        "addVersionUrl": true
      },
      "release-it-pnpm": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNActualPathSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.cyanchill.missingcore.actualpath"
    }
  },
  "create-react-native-library": {
    "type": "module-mixed",
    "languages": "kotlin-objc",
    "version": "0.38.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "@expo/cli": "patches/@expo__cli.patch"
    }
  }
}
